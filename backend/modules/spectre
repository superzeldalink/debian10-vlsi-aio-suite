#%Module1.0
## Environment module for SPECTRE tools

# Update the PATH environment variable
append-path PATH /opt/cadence/SPECTRE231/bin
append-path PATH /opt/cadence/SPECTRE231/tools/relxpert/bin

append-path SPECMAN_PATH /opt/cadence/SPECTRE231/bin
append-path SPECMAN_PATH /opt/cadence/SPECTRE231/tools/relxpert/bin

setenv MGLS_LICENSE_FILE /opt/mentor/license/license.dat
setenv CADENCE_VIP_LIC_ORDER newrev:soc:portfolio:alacarte
setenv LANG C
setenv QRC_MOS_LW_PRECISION Y
setenv CDS_LIC_ONLY 1
setenv CDS_LIC_FILE /opt/cadence/IC231/share/license/license.dat
setenv CDS_Netlisting_Mode Analog
setenv MGC_HOME /opt/mentor
setenv CDS_ENABLE_VMS 1
setenv W3264_NO_HOST_CHECK 1
setenv OA_UNSUPPORTED_PLAT linux_rhel50_gcc48x
setenv SPECTREHOME /opt/cadence/SPECTRE231
setenv CADHOME /opt/cadence
setenv TERM xterm
setenv CDS_AUTO_64BIT ALL
setenv SHLVL 1
setenv MGC_PDF_READER evince
setenv MOZILLA_HOME /usr/bin/firefox
setenv CDS_LOAD_ENV CWD

# Module description
module-whatis "Environment module for SPECTRE tools"
